{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://redletters.dev/schemas/citations-v1.0.0.schema.json",
  "title": "Citations Export",
  "description": "Schema for citations export with metadata wrapper (v0.7.0+)",
  "type": "object",
  "required": [
    "schema_version",
    "export_timestamp",
    "entries",
    "entries_count",
    "content_hash"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "export_timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of export",
      "format": "date-time"
    },
    "entries": {
      "type": "array",
      "description": "CSL-JSON citation entries",
      "items": {
        "$ref": "#/$defs/csl_entry"
      }
    },
    "entries_count": {
      "type": "integer",
      "description": "Number of entries",
      "minimum": 0
    },
    "content_hash": {
      "type": "string",
      "description": "SHA-256 hash of entries for verification",
      "pattern": "^[0-9a-f]{64}$"
    }
  },
  "$defs": {
    "csl_entry": {
      "type": "object",
      "description": "CSL-JSON citation entry",
      "required": ["id", "type", "title"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique citation ID (pack_id)"
        },
        "type": {
          "type": "string",
          "description": "CSL type",
          "enum": ["book", "dataset", "software", "article", "chapter"]
        },
        "title": {
          "type": "string",
          "description": "Title of the work"
        },
        "author": {
          "type": "array",
          "description": "Authors in CSL format",
          "items": {
            "type": "object",
            "properties": {
              "family": {"type": "string"},
              "given": {"type": "string"}
            }
          }
        },
        "edition": {
          "type": "string",
          "description": "Edition string"
        },
        "publisher": {
          "type": "string",
          "description": "Publisher name"
        },
        "issued": {
          "type": "object",
          "description": "Publication date in CSL format",
          "properties": {
            "date-parts": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {"type": "integer"}
              }
            }
          }
        },
        "URL": {
          "type": "string",
          "description": "Source URL",
          "format": "uri"
        },
        "note": {
          "type": "string",
          "description": "License note"
        },
        "version": {
          "type": "string",
          "description": "Version string"
        },
        "x-license": {
          "type": "string",
          "description": "License identifier (custom field)"
        },
        "x-license-url": {
          "type": "string",
          "description": "License URL (custom field)"
        },
        "x-pack-role": {
          "type": "string",
          "description": "Pack role (custom field)"
        }
      }
    }
  }
}
